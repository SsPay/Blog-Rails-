<div class="container">

<%= form_with(model: author, local: true) do |form| %>
  <% if author.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(author.errors.count, "error") %> prohibited this author from being saved:</h2>

      <ul>
        <% author.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :login, class: "form-control", id: "login", placeholder: "Enter Login", autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= form.text_field :email, type: "email", class: "form-control", id: "email", placeholder: "Enter email", autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= form.password_field :password, type: "password", class: "form-control", id: "password", placeholder: "Введите пароль" %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, type: "password", class: "form-control", id: "password", placeholder: "Введите пароль"  %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
</div>
