
<p id="notice"><%= notice %></p>
<div class="container">


<p>
  <strong>Author:</strong>
  <%= @post.author.login %>
</p>

<h1>
  <strong><%= @post.title %></strong>
</h1>

<section class="post-content">
  <%= @post.content %>
</section>
<%=  image_tag(@post.picture) if @post.picture.attached? %>
<br>
<% if @post.author == current_author %>
<%= link_to 'Edit', edit_post_path(@post), class: "badge badge-warning" %> |
<%= link_to 'Back', posts_path, class: "badge badge-warning" %>
<% end %>
<hr>
<h2>Comments</h2>
<% @post.comments.each do  |comment| %>
  <div class="alert alert-light">
    <p><strong><%= comment.username %></strong>:<%= comment.body %></p>
    |
    <p>
      <%= link_to 'Destroy Comment', [comment.post, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
    </p>
  </div>
  <% end  %>
<hr>

<h2>Add comment  <%= fa_icon "edit" %></h2>
<%= form_for ([@post, @post.comments.build]) do |f| %>
  <p>
    User<br>
    <%= f.text_field(:username, {:class => "form-control"}) %>
  </p>
  <p>
    Text<br>
    <%= f.text_area(:body, {:class => "form-control"}) %>
  </p>
  <p>
    <%= f.submit("Add comment",{:class => 'btn btn-success'}) %>
  </p>
<% end  %>
</div>
